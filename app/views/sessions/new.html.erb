<div>
  <% if flash[:alert]%>
  <p id ="notice"><%= flash[:alert] %></p>
    <% end %>
</div>
<%= form_tag do %>
<fieldset>
  <legend>Zaloguj się</legend>
  <div>
    <%= label_tag :login, 'Login' %>
    <%= text_field_tag :login, params[:login] %>

    <%= label_tag :password, 'Hasło' %>
    <%= password_field_tag :password, params[:password] %>
    </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>