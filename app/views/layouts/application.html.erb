<!DOCTYPE html>
<html>
  <head>
    <title>Firma</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'true' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top">

      <!-- Brand and toggle get grouped for better mobile display -->

    <a href="#menu-toggle" class="navbar-brand" id="menu-toggle">Wyświetl menu</a>

    <ul class="nav navbar-nav navbar-right" style="padding-right: 50px" >
      <% if   session[:user_id] %>
       <li role="presentation" style="margin: 15% auto">Hello!</li>
      <% else %>
       <li role="presentation" style="margin: 5% auto">Załóż konto lub się zaloguj!</li>
      <% end %>



      <% if session[:user_id] %>
          <li role="presentation"><%= link_to t('logout'), logout_path %></li>
      <% else %>
          <li role="presentation"><%= link_to t('login'), login_path %></li>
          <li role="presentation"><%= link_to t('signup'), new_person_path %></li>
      <% end %>

    </ul>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


      </div><!-- /.navbar-collapse -->

  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <a href="#">
           Nawigacja
          </a>
        </li>

        <li role="presentation"><%= link_to t('Lista aut'), cars_path %></li>

        <li role="presentation"> <%= link_to 'Dodaj auto', new_car_path %> </li>
        <li role="presentation"><%= link_to t('Wszystkie trasy'), runs_path %></li>

        <li role="presentation"><%= link_to 'Dodaj trase', new_run_path %> </li>

      </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="col-md-12 padding-top" style="margin-top: 5%">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>






  </div>
  </body>
</html>
<script>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>